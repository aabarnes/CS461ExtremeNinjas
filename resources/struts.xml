<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="false" />
	<constant name="struts.custom.i18n.resources" value="ApplicationResources" />

	<package name="default" extends="struts-default" namespace="/">
		<action name="login" class="edu.iastate.cs.proj461.LoginAction">
			<result name="success">Welcome.jsp</result>
			<result name="error">Login.jsp</result>
		</action>
		<action name="logout" class="edu.iastate.cs.proj461.LogoutAction">
			<result name="success">Login.jsp</result>
			<result name="error">Welcome.jsp</result>
		</action>
	</package>
	<package name="search" namespace="/search" extends="json-default">

		<action name="VideoCaptureSearchResultsAction" class="edu.iastate.cs.proj461.VideoCaptureSearchResultsAction">
			<result type="json">
				<param name="ignoreHierarchy">false</param>
				<param name="root">returnObj</param>
			</result>
		</action>
		
	</package>
</struts>